<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="android.view.View" />
        <variable
            name="picassoWrapper"
            type="com.moviesdb.moviesdbmvvm.activity.adapter.PicassoWrapper"/>
        <variable
            name="viewModel"
            type="com.moviesdb.moviesdbmvvm.viewmodel.main.movies_line.MovieListCowerFlowViewModel" />
    </data>

    <android.support.v7.widget.CardView

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:translationZ="10dp"
        android:layout_marginBottom="20dp"
        app:cardBackgroundColor="@color/black"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/backdropImage"
                    tools:imageUrl="@{viewModel.poster}"
                    tools:picasso="@{picassoWrapper.picasso}"
                    android:src="@drawable/backdrop"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:onClick="@{(view)->viewModel.onPosterClicked()}"
                    />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="93dp"
                    android:layout_alignBottom="@+id/backdropImage"
                    android:src="@drawable/shadow_up" />
            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="10dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:text="A Star Is Born"
                        android:textSize="30sp"/>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        >
                        <TextView
                            style="@style/MainMovieDetails"
                            android:text="2018" />
                        <TextView
                            style="@style/MainMovieDetails"
                            android:text="R"/>
                        <TextView
                            style="@style/MainMovieDetails"
                            android:text="16min"/>
                        <TextView
                            style="@style/MainMovieDetails"
                            android:text="Drama, Music, Romance"/>


                    </LinearLayout>
                </LinearLayout>


            </LinearLayout>






        </LinearLayout>







    </android.support.v7.widget.CardView>

</layout>